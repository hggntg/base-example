{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["es2020"],
        "declaration": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "types": ["./typings"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "paths": {
            "@app/*": ["src/*"],
            "@app": ["src/index.ts"]
        }
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/*.json",
        "src/**/*.json"
    ]
}